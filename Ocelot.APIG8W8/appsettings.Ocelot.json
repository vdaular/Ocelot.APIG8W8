{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:3000",
    "RateLimitOptions": {
      "EnableRateLimiting": false,
      "Period": "10s",
      "PeriodTimeSpan": 10,
      "Limit": 1
    }
  },
  "Routes": [
    // OAuth 2.0 Server y OpenId Connect Provider -- https://localhost:3100
    {
      "DangerousAcceptAnyServerCertificateValidator": true, // Remover al colocar los certificados finales

      // Cómo deben enviarse los requests
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3100
        }
      ],

      // Cómo se esperan los requests
      "UpstreamPathTemplate": "/oauth/{everything}",
      "UpstreamHeaderTransform": {
        "Referrer": "{RemoteIpAddress}",
        "X-Forwarded-For": "{RemoteIpAddress}"
      },

      // Inyector de Headers
      "DelegatingHandlers": [
        "HeadersInjectorDelegatingHandler"
      ]
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "",
      "Config": [
        {
          "Name": "",
          "Version": "v1",
          "Url": "https://localhost:7005/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
